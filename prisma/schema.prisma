// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("INJURY_TRACKER_PRISMA_URL") // uses connection pooling
  directUrl = env("INJURY_TRACKER_URL_NON_POOLING") // uses a direct connection
}

model UserDetails {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  reports    Report[]
}

model Report {
  id             Int       @id @default(autoincrement())
  name           String
  dateOfInjury   DateTime
  dateOfReport   DateTime  @default(now())
  userId         Int
  userDetails    UserDetails @relation(fields: [userId], references: [id])
  injuries       Json
}